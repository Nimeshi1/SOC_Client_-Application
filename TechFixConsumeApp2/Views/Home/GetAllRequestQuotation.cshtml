@model IEnumerable<TechFixWebApi.RequestQuotation>

@{
    ViewBag.Title = "Get All Request Quotations";
}

<h2 style="text-align: center; color: #4CAF50;"> All Request Quotations</h2>



<table class="table-requests" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">@Html.DisplayNameFor(model => model.RequestQuotationID)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">@Html.DisplayNameFor(model => model.ProductID)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">@Html.DisplayNameFor(model => model.Quantity)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">@Html.DisplayNameFor(model => model.RequestDate)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.RequestQuotationID)</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.ProductID)</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.RequestDate)</td>
                <td style="border: 1px solid #ddd; padding: 8px; text-align: center;">
                    @Html.ActionLink("Delete", "DeleteRequestQuotation", new { id = item.RequestQuotationID }, new { @class = "btn-action" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-requests {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table-requests th, .table-requests td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .table-requests th {
            background-color: #f4f4f4;
            font-weight: bold;
            text-align: center;
        }

        .table-requests tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table-requests tr:hover {
            background-color: #f1f1f1;
        }

    .btn-create {
        background-color: #4CAF50;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
        border: none;
        font-size: 16px;
    }

        .btn-create:hover {
            background-color: #45a049;
        }

    .btn-action {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        border: 1px solid #4CAF50;
        border-radius: 3px;
        background-color: red;
        font-size: 14px;
    }

        .btn-action:hover {
            background-color: transparent;
            color: black;
        }
</style>
