@model IEnumerable<TechFixWebApi.Order>

@{
    ViewBag.Title = "Get All Orders";
}

<h2 style="text-align: center; color: #4CAF50; font-weight:bold;">Get All Orders</h2>



<table class="table-orders" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;">@Html.DisplayNameFor(model => model.OrderID)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;">@Html.DisplayNameFor(model => model.SupplierID)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;">@Html.DisplayNameFor(model => model.ProductID)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;">@Html.DisplayNameFor(model => model.Quantity)</th>
            <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2; text-align: left;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.OrderID)</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.SupplierID)</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.ProductID)</td>
                <td style="border: 1px solid #ddd; padding: 8px;">@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td style="border: 1px solid #ddd; padding: 8px; text-align: center;">
                    
                    @Html.ActionLink("Details", "Details", new { id = item.OrderID }, new { @class = "btn-actions" }) 
                    @Html.ActionLink("Delete", "DeleteOrder", new { id = item.OrderID }, new { @class = "btn-action" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-orders {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table-orders th, .table-orders td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .table-orders th {
            background-color: #f4f4f4;
            font-weight: bold;
            text-align: center;
        }

        .table-orders tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table-orders tr:hover {
            background-color: #f1f1f1;
        }

    .btn-create {
        background-color: #4CAF50;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
        border: none;
        font-size: 16px;
    }

        .btn-create:hover {
            background-color: #45a049;
        }

    .btn-action {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        border: 1px solid black;
        border-radius: 3px;
        background-color: red;
        font-size: 14px;
    }

        .btn-action:hover {
            background-color: transparent;
            color: black;
        }

    .btn-actions {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        border: 1px solid black;
        border-radius: 3px;
        background-color: green;
        font-size: 14px;
    }

        .btn-actions:hover {
            background-color: transparent;
            color: black;
        }

</style>
