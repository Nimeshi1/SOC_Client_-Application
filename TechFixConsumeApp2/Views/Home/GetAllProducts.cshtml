@model IEnumerable<TechFixWebApi.Product>

@{
    ViewBag.Title = "GetAllProducts";
}

<h2 style="text-align: center; color: #4CAF50; font-weight:bold;">Product List</h2>

<p style="text-align: left;">
    @Html.ActionLink("Add New Product", "AddProduct", null, new { @class = "btn btn-primary" })
</p>

<table class="table" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.ProductID)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.ProductName)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Price)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Discription)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.Quantity)</th>
            <th style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayNameFor(model => model.SupplierID)</th>
            <th style="padding: 10px; border: 1px solid #ddd;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.ProductID)</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Price)</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Discription)</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@Html.DisplayFor(modelItem => item.SupplierID)</td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    @Html.ActionLink("Edit", "UpdateProduct", new { id = item.ProductID }, new { @class = "btn btn-warning btn-sm" }) 
                    @Html.ActionLink("Delete", "DeleteProduct", new { id = item.ProductID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    th {
        text-align: left;
    }

    .btn {
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        color: white;
    }

    .btn-primary {
        background-color: #4CAF50;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
    }

    .btn-danger {
        background-color: red;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
    }

    .btn:hover {
        background-color:transparent;
        color:black;
        opacity: 0.9;
    }
</style>
